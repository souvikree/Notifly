<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="022-sync-failed-notifications-columns" author="notifly">

        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="failed_notifications" columnName="error_code"/>
            </not>
        </preConditions>

        <addColumn tableName="failed_notifications">
            <column name="error_code" type="varchar(255)" defaultValue="UNKNOWN">
                <constraints nullable="false"/>
            </column>
        </addColumn>

    </changeSet>

</databaseChangeLog>