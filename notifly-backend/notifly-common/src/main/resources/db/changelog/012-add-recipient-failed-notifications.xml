<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="024-add-recipient-to-failed-notifications" author="notifly">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="failed_notifications" columnName="recipient"/>
            </not>
        </preConditions>
        <addColumn tableName="failed_notifications">
            <column name="recipient" type="TEXT"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>